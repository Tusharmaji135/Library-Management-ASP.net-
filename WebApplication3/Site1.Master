    transition: all 0.3s ease;
}

::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(180deg, #00f2fe, #4facfe);
}

/* For Firefox */
* {
    scrollbar-width: thin;
    scrollbar-color: #4facfe rgba(26, 35, 46, 0.6);
}

    </style>
</head>
